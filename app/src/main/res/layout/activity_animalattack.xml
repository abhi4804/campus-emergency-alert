<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animalattack">
    <TextView
        android:id="@+id/appan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TROUBLE DUE TO ANIMAL"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:id="@+id/aniname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/appan"
        android:hint="Enter your name"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/anno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/aniname"
        android:hint="Enter your number"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/anname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/anno"
        android:hint="Enter name of animal"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/navan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live navigation:"
        android:layout_below="@id/anname"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        />
    <Button
        android:id="@+id/btnan"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="CALL"
        android:layout_below="@id/navan"/>
    <Button
        android:id="@+id/btnans"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:text="SUBMIT"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_below="@id/navan"/>



</RelativeLayout>